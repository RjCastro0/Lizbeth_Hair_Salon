@model IEnumerable<Lisbeth_Hair_Salon.Models.Inventario>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mb-4">Inventario</h1>

<div class="container">
    <p class="text-right">
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ProductName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cantidad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Sucursal)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProductName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cantidad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Sucursal.SucursalesId)
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.InventarioId" class="btn btn-info">Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.InventarioId" class="btn btn-secondary">Details</a>
                                        <a asp-action="Delete" asp-route-id="@item.InventarioId" class="btn btn-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

