@model Lisbeth_Hair_Salon.Models.TicketDeVenta

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>Ticket De Venta</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Empleada)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Empleada)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClienteNombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClienteNombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Servicio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Servicio.NombreServicio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Surcursal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Surcursal.Nombre)
        </dd>

        <tbody>
            @foreach (var venta in Model.Ventas)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => venta.Servicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => venta.Precio)
                    </td>
                </tr>
            }
        </tbody>
        
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
